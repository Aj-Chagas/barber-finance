<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_barber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_20dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/barber"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_fernando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/fernando"
        android:textSize="@dimen/default_20sp"
        app:layout_constraintEnd_toStartOf="@id/chip_junior"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/label_barber"
        app:layout_constraintTop_toBottomOf="@+id/label_barber" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_junior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/junior"
        android:textSize="@dimen/default_20sp"
        android:layout_marginEnd="@dimen/default_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chip_fernando"
        app:layout_constraintTop_toTopOf="@+id/chip_fernando" />

    <TextView
        android:id="@+id/label_sifrao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/sifrao"
        android:textSize="@dimen/default_20sp"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/default_20dp"
        app:layout_constraintEnd_toStartOf="@id/value_money"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_fernando" />

    <TextView
        android:id="@+id/value_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/value_0_00"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_sifrao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_sifrao"
        app:layout_constraintTop_toTopOf="@+id/label_sifrao" />

    <Button
        android:layout_width="@dimen/default_0dp"
        android:layout_height="48dp"
        android:text="@string/conclude"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/white"
        android:layout_margin="@dimen/default_16dp"
        android:background="@drawable/rounded_red_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>